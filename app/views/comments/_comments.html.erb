<div class="comments-title">
  <h2 class="alpha"><%= t('comments.title') %></h2>
</div>

  <% if logged_in? %>
    <%= render 'comments/new', article: article %>
  <% end %>

<div class="comments-list">
  <% if article.comments.any? %>
    <div id="comments" data-channel="comments" 
        data-article-id="<%= article.id %>" 
        data-article-type="<%= article.class.to_s %>" 
        class="comments-list">
      <%= render article.comments %>
    </div>
  <% else %>
    <p class="not-found"><%= t('comments.not_found') %></p>
  <% end %>
</div>
