<% unless @comment.errors.any? %>
  Comments.insertComment('<%=j render @comment %>');
  Comments.resetCommentForm('<%=j render 'comments/new', article: @article %>');
<% end %>

<% if flash.any? %>
  Alert.alert = {
    id: '<%=j alert_id %>',
    message: '<%=j flash.alert || flash.notice %>',
    role: '<%=j flash.alert ? 'alert' : 'notice' %>'
  };

  Alert.render(Alert.alert);
<% end %>
