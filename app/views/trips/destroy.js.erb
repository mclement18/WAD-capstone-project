<% if @trip.deleted || @trip.destroyed? %>
  Trip.removeFromPage(<%= @trip.id %>, '<%=j t('account.trips.index.not_found') %>')
<% end %>

<% if flash.any? %>
  Alert.alert = {
    id: '<%=j alert_id %>',
    message: '<%=j flash.alert || flash.notice %>',
    role: '<%=j flash.alert ? 'alert' : 'notice' %>'
  };

  Alert.render(Alert.alert);
<% end %>
