<% if @todo.destroyed? %>
  ToDo.respond(<%= @todo.trip_id %>, 'todo-delete',
                '<%=j render partial: 'todo_create_button', locals: { user: current_user, trip_id: @todo.trip_id } %>',
                "<%=j t('account.to_dos.index.not_found') %>")
<% end %>

<% if flash.any? %>
  Alert.alert = {
    id: '<%=j alert_id %>',
    message: '<%=j flash.alert || flash.notice %>',
    role: '<%=j flash.alert ? 'alert' : 'notice' %>'
  };

  Alert.render(Alert.alert);
<% end %>
