<% if @todo.destroyed? %>
  ToDo.respond(<%= @todo.trip_id %>, 'todo-delete',
                '<%=j render partial: 'todo_create_button', locals: { user: current_user, trip_id: @todo.trip_id } %>',
                "<%= t('account.to_dos.index.not_found') %>")
<% end %>

<% if flash.any? %>
  Alert.render('<%=j render 'alert_and_notice', alert: flash.alert, notice: flash.notice %>')
<% end %>
