<% unless @todo.errors.any? %>
  ToDo.respond(<%= @todo.trip_id %>, 'todo-create',
               '<%=j render partial: 'todo_delete_button', locals: { user: current_user, todo: @todo } %>')
<% end %>

<% if flash.any? %>
  Alert.render('<%=j render 'alert_and_notice', alert: flash.alert, notice: flash.notice %>')
<% end %>
