<% unless @todo.errors.any? %>
  ToDo.respond(<%= @todo.trip_id %>, 'todo-create',
               '<%=j render partial: 'todo_delete_button', locals: { user: current_user, todo: @todo } %>')
<% end %>

<% if flash.any? %>
  Alert.alert = {
    id: '<%=j alert_id %>',
    message: '<%=j flash.alert || flash.notice %>',
    role: '<%=j flash.alert ? 'alert' : 'notice' %>'
  };

  Alert.render(Alert.alert);
<% end %>
