<% unless @todo.errors.any? %>
  ToDo.button = {
    text: '<%=raw j t('todos.delete') %>',
    path: '<%=j user_to_do_path(current_user, @todo) %>',
    tripId: 0
  };

  ToDo.respond(
    <%= @todo.trip_id %>,
    buttonType='todo-create',
    button=ToDo.buildRemoveButton(ToDo.button),
    tagText='<%=raw j t('tags.todo') %>',
    message=''
  );
<% end %>

<% if flash.any? %>
  Alert.alert = {
    id: '<%=j alert_id %>',
    message: '<%=raw j flash.alert || flash.notice %>',
    role: '<%=j flash.alert ? 'alert' : 'notice' %>'
  };

  Alert.render(Alert.alert);
<% end %>
