<div class="main-title">
  <div class="title">
    <h1><%= t(".title_#{@current_page}") %></h1>
  </div>
  <%= render partial: 'sub_nav', locals: { current: @current_page } %>
</div>

<div class="cards">
  <% if @todos.any? %>
    <ul class="cards__list bare-list" id="todo-list">
      <% @todos.each do |trip| %>
        <%= render partial: 'todo_card', locals: { trip: trip, current_page: @current_page } %>
      <% end %>
    </ul>

    <%= paginate @todos, window: 1 %>
  <% else %>
    <p class="not-found"><%= t('.not_found') %></p>
  <% end %>
</div>
