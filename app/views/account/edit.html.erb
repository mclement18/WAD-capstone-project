<div class="main-title">
  <div class="title">
    <h1>Update your account</h1>
  </div>
</div>

<%= form_for(current_user, url: account_path, html: { class: 'form' }) do |form| %>

  <%= render partial: 'model_errors', locals: { model: current_user } %>
  
  <div class="form__input">
    <div class="input-group">
      <%= form.label :name, class: 'input-label' %>
      <%= form.text_field :name, class: 'input-field' %>
    </div>
    <div class="input-group">
      <%= form.label :avatar, class: 'input-label' %>
      <div class="input-file__container">
        <%= form.file_field :avatar, class: 'input-file sr-only', accept: '.jpg, .jpeg, .gif, .png' %>
        <label class="btn input-file__trigger" for="user_avatar" id="fileTrigger">choose file</label>
      </div>
    </div>
    <div class="input-group">
      <%= form.label :email, class: 'input-label' %>
      <%= form.email_field :email, class: 'input-field', placeholder: 'e.g. peterparker@oscorp.com' %>
    </div>
    <div class="input-group">
      <%= form.label :password, class: 'input-label' %>
      <%= form.password_field :password, class: 'input-field' %>
    </div>
  </div>
  <div class="prompt prompt--cancel">
    <%= link_to 'Cancel', account_path, class: 'link' %>
    <%= form.submit 'Update', class: 'btn btn--primary' %>
  </div>
<% end %>

