<div class="main-title">
  <div class="title title--with-button">
    <h1>Your profile</h1>
    <%= link_to 'Edit', edit_account_path, class: 'btn' %>
  </div>
  <%= render partial: 'sub_nav', locals: { current: 'account' } %>
</div>

<div class="user-info">
  <div>
    <h3 class="name"><%= current_user.name %></h3>
    <h3 class="email"><%= current_user.email %></h3>
  </div>
  <%= image_tag current_user.avatar_url, class: 'avatar', alt: "#{current_user.name} avatar" %>
</div>

<div class="user-stat">
  <ul>
    <li>Trips created:</li>
    <li>Trips to do:</li>
    <li>Trips done:</li>
    <li>Comments:</li>
  </ul>
</div>
