<% content_for :banner, 'banner' %>
<% content_for :logo, 'logo--inverted' %>

<% content_for :header do %>
  <div class="content-wrapper">
    <div class="main-title">
      <div class="title">
        <h1>If you don't know where to go for your next vacation, you found the right place!</h1>
      </div>
    </div>
  </div>
<% end %>

<div class="categories">
  <h2>You know what you want to do? Then brows the suggested trips by categories.</h2>
  <ul class="categories__list bare-list">
    <% %w(city road international relaxing cultural adventurous).each do |category| %>
      <%= render partial: 'category_card',locals: { category: category } %>
    <% end %>
  </ul>
</div>
